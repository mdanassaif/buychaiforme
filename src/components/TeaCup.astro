<div class="tea-cup">
  <div class="cup">
    <div class="tea"></div>
  </div>
  <div class="handle"></div>
  <div class="saucer"></div>
</div>

<style>
  .tea-cup {
    position: relative;
    margin: 2rem auto;
    width: 120px;
  }

  .cup {
    width: 100px;
    height: 80px;
    background: white;
    border-radius: 0 0 45% 45%;
    position: relative;
    margin: 0 auto;
    border: 3px solid #333;
  }

  .tea {
    width: 100%;
    height: 50px;
    background: #c17817;
    position: absolute;
    bottom: 0;
    border-radius: 0 0 45% 45%;
  }

  .handle {
    width: 40px;
    height: 40px;
    border: 3px solid #333;
    border-radius: 50%;
    position: absolute;
    right: -20px;
    top: 20px;
  }

  .saucer {
    width: 120px;
    height: 15px;
    background: white;
    border: 3px solid #333;
    border-radius: 50%;
    margin: 0 auto;
  }
</style>